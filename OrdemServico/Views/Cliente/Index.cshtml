@model IEnumerable<OrdemServico.Models.Cliente>

@{
    ViewData["Title"] = "Clientes";
}

<div class="container">
    <h1 class="text-center">Clientes</h1>
    <p class="text-right">
        <a asp-action="Create" class="btn btn-primary">Cadastrar Novo Cliente</a>
    </p>
    <table class="table table-striped table-bordered">
        <thead class="thead-dark">
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.NomeCliente)
                </th>
                <th>Ações</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.NomeCliente)
                    </td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@item.IdCliente" class="btn btn-sm btn-primary">Editar</a>
                        <a asp-action="Details" asp-route-id="@item.IdCliente" class="btn btn-sm btn-info">Detalhes</a>
                        <a asp-action="Delete" asp-route-id="@item.IdCliente" class="btn btn-sm btn-danger">Excluir</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
