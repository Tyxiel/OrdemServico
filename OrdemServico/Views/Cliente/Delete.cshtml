@model OrdemServico.Models.Cliente

@{
    ViewData["Title"] = "Excluir Cliente";
}

<div class="container">
    <h1 class="text-center">Excluir Cliente</h1>
    <hr />
    <h3>Tem certeza que deseja excluir esse cliente?</h3>
    <div class="row">
        <div class="col-md-6 offset-md-3">
            <dl class="row">
                <dt class="col-sm-2">
                    Cliente
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.NomeCliente)
                </dd>
            </dl>
            <form asp-action="Delete">
                <input type="hidden" asp-for="IdCliente" />
                <input type="submit" value="Excluir" class="btn btn-danger" />
                <a asp-action="Index" class="btn btn-secondary">Voltar para a lista</a>
            </form>
        </div>
    </div>
</div>
