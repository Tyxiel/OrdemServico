@model OrdemServico.Models.OrdensServico

@{
    ViewData["Title"] = "Excluir Ordem de Serviço";
}

<div class="container">
    <h1 class="text-center">Excluir Ordem de Serviço</h1>
    <h3>Tem certeza que deseja excluir este registro?</h3>
    <div class="row">
        <div class="col-md-6 offset-md-3">
            <h4>Detalhes da Ordem de Serviço</h4>
            <hr />
            <dl class="row">
                <dt class="col-sm-2">Data</dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.DataOrdemServico)
                </dd>
                <dt class="col-sm-2">Serviço</dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Servico)
                </dd>
                <dt class="col-sm-2">Valor Total</dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.ValorTotal)
                </dd>
                <dt class="col-sm-2">Status</dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.StatusServico)
                </dd>
                <dt class="col-sm-2">Equipamento</dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.IdEquipamentoNavigation.NomeEquipamento)
                </dd>
                <dt class="col-sm-2">Cliente</dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.IdClienteNavigation.NomeCliente)
                </dd>
                <dt class="col-sm-2">Defeito</dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.IdDefeitoNavigation.Descricao)
                </dd>
                <dt class="col-sm-2">Técnico</dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.IdTecnicoNavigation.NomeTecnico)
                </dd>
            </dl>
            <form asp-action="Delete">
                <input type="hidden" asp-for="IdOrdemServico" />
                <input type="submit" value="Excluir" class="btn btn-danger" /> |
                <a asp-action="Index" class="btn btn-secondary">Voltar para a lista</a>
            </form>
        </div>
    </div>
</div>
