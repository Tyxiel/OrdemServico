@model OrdemServico.Models.Equipamento

@{
    ViewData["Title"] = "Excluir Equipamento";
}

<div class="container">
    <h1 class="text-center">Excluir Equipamento</h1>
    <hr />
    <h3>Tem certeza que deseja excluir esse equipamento?</h3>
    <div class="row">
        <div class="col-md-6 offset-md-3">
            <dl class="row">
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.NomeEquipamento)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.NomeEquipamento)
                </dd>
            </dl>
            <form asp-action="Delete">
                <input type="hidden" asp-for="IdEquipamento" />
                <input type="submit" value="Excluir" class="btn btn-danger" />
                <a asp-action="Index" class="btn btn-secondary">Voltar para a lista</a>
            </form>
        </div>
    </div>
</div>
