@model IEnumerable<OrdemServico.Models.Equipamento>

@{
    ViewData["Title"] = "Equipamentos";
}

<div class="container">
    <h1 class="text-center">Equipamentos</h1>
    <p class="text-right">
        <a asp-action="Create" class="btn btn-primary">Cadastrar Novo Equipamento</a>
    </p>
    <table class="table table-striped table-bordered">
        <thead class="thead-dark">
            <tr>
                <th>Equipamento</th>
                <th>Ações</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.NomeEquipamento)
                    </td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@item.IdEquipamento" class="btn btn-sm btn-primary">Editar</a>
                        <a asp-action="Details" asp-route-id="@item.IdEquipamento" class="btn btn-sm btn-info">Detalhes</a>
                        <a asp-action="Delete" asp-route-id="@item.IdEquipamento" class="btn btn-sm btn-danger">Excluir</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
